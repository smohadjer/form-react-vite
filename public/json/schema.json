{
  "type": "object",
  "properties": {
    "_id": {
      "type": "string"
    },
    "firstname": {
      "type": "string",
       "pattern": "^([^0-9]*)$",
       "errorMessage": {
          "pattern": "Use only letters!",
          "required": "This is a required field!"
       }
    },
    "lastname": {
      "type": "string",
      "pattern": "^([^0-9]*)$",
      "errorMessage": {
        "pattern": "Use only letters!"
     }
    },
    "age": {
      "type": "integer",
      "minimum": 10,
      "maximum": 100,
      "errorMessage": {
        "minimum": "Age must be more than 10!",
        "minLength": "Age must be less than 100!"
       }
    },
    "gender": {
      "enum": ["male", "female"],
      "errorMessage": {
        "enum": "Wrong value",
        "required": "This is a required field!"
       }
    },
    "role": {
      "type": "string"
    },
    "privacy": {
      "enum": ["agree"],
      "errorMessage": {
        "enum": "You should agree to privacy policy.",
        "required": "This is a required field!"
       }
    },
    "hobbies": {
      "type": "array"
    }
  },
  "required": ["_id", "firstname", "role", "gender", "privacy"],
  "additionalProperties": false
}
